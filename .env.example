# AI智汇观察 - 环境变量配置
# 复制此文件为 .env 并填写实际值

# DeepSeek API 配置
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# 数据采集配置
REQUEST_TIMEOUT=10
MAX_RETRIES=3
USER_AGENT=Mozilla/5.0 (兼容环境)

# 分析配置
ANALYSIS_TEMPERATURE=0.7
MAX_TOKENS=2000
ANALYSIS_TIMEOUT=30

# 内容生成配置
MIN_ARTICLE_LENGTH=500
MAX_ARTICLE_LENGTH=2000
DEFAULT_INDUSTRY=科技

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=./logs/system.log

# GitHub Actions 特定配置（生产环境使用Secrets）
# 以下变量在GitHub Actions中通过Secrets设置
# DEEPSEEK_API_KEY=${DEEPSEEK_API_KEY}

# 本地开发配置（可选）
LOCAL_CACHE=true
CACHE_TTL=3600
DEBUG_MODE=false

# 备份配置
BACKUP_ENABLED=true
BACKUP_DIR=./backups
RETENTION_DAYS=30